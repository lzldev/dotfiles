# selection into clipboard
bindsym $mod+Shift+s exec --no-startup-id "maim -sB | xclip -selection clipboard -t image/png"
# selection into clipboard with shadow
bindsym $mod+Shift+d exec --no-startup-id "maim -sB  | convert - \( +clone -background '#fcb5c6' -shadow 40x10+0+0 \) +swap -background none -layers merge +repage -| xclip -selection clipboard -t image/png" 

# Into Screenshots folder
bindsym $mod+Shift+x exec --no-startup-id "maim ~/Pictures/Screenshots/$(date +%s).png && notify-send -t 800 'Print'"
# Selection Into Screenshots folder
bindsym $mod+Shift+z exec --no-startup-id "maim -s ~/Pictures/Screenshots/$(date +%s).png && notify-send  -t 1200 'Sent to screenshots folder'"

